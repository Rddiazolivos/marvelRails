<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Estado</th>
      <th>Historial de peleas</th>
      <th colspan="3" width="20%"> Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.status %></td>
        <td><%= link_to 'Historial', user , :class => "btn"%></td>
        <td><%= link_to 'Show', user , :class => "btn btn-warning"%></td>
        <td><%= link_to 'Edit', edit_user_path(user) , :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?'  }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo usuario', new_user_path , :class => "btn btn-primary" %> 
