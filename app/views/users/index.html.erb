<p id="notice"><%= notice %></p>

<h1>Usuarios
  <small>
    <%= link_to 'Revivir todos', revivirAll_path , :class => "btn btn-info btn-sm" %> 
  </small>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Estado</th>
      <th>Historial de peleas</th>
      <th colspan="3" width="20%"> Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.status ? :Vivo : :Muerto %></td>
        <td><%= link_to 'Historial', historial_path('id' => user.id) , :class => "btn"%></td>
        <td><%= if !user.status; link_to 'Revivir', revivir_path('id' => user.id), :class => "btn btn-info btn-sm"; end %></td>
        <td><%= link_to 'Show', user , :class => "btn btn-warning btn-sm"%></td>
        <td><%= link_to 'Edit', edit_user_path(user) , :class => "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?'  }, :class => "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo usuario', new_user_path , :class => "btn btn-primary" %> 
