<p id="notice"><%= notice %></p>

<h1>Usuarios
  <small>
    <%= link_to 'Reset Ranking', resetAll_path , :class => "btn btn-info btn-sm" %> 
  </small>
</h1>

<table class="table">
  <thead>
    <tr>
    	<th>Posicion</th>
      <th>Nombre</th>
      <th>Puntaje</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each.with_index do |user, index| %>
      <tr>
      	<td><%= index +1 %></td>
        <td><%= user.name %></td>
        <td><%= user.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>
